<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wabu.d2project.user.UserMapper">
    <insert id="userRegister" parameterType="com.wabu.d2project.user.User">
    	INSERT INTO user(id,name,password) values(#{id}, #{password});
    </insert>
    
    <insert id="profileRegister" parameterType="com.wabu.d2project.user.Profile">
    	INSERT INTO ${profile}(id,name,birthday,country) values(#{id}, #{name}, #{birthday}, #{country});
    </insert>
    
    <update id="createFriendsTable" parameterType="java.lang.String">
    	CREATE TABLE IF NOT EXISTS friends_${id}
    	(
    		friendId VARCHAR(20) PRIMARY KEY
    	);
    </update>
    
    <update id="createNotificationTable" parameterType="java.lang.String">
    	CREATE TABLE IF NOT EXISTS notification_${id}
    	(
    		notificationId VARCHAR(20) PRIMARY KEY,
    		friendId VARCHAR(20)
    		notificationContent VARCHAR(20),
    		isRead TINYINT(1) DEFAULT false
    	);
    </update>

    <insert id="notify" parameterType="java.lang.String">
    	INSERT INTO notification_${id}(friendId, notificationContent) values(#{friendId}, #{notificationContent});
    </insert>
    
    <update id="readNotification" parameterType="java.lang.String">
    	UPDATE notification_${id} SET
    		isRead = true
    	WHERE notificationId=#{notificationId};
    </update>
    
    <delete id="deleteNotification" parameterType="java.lang.String">
    	DELETE FROM notification_${id}
    	WHERE isRead=true;
    </delete>
    
    <insert id="beFriend" parameterType="java.lang.String">
    	INSERT INTO friends_${id}(friendId) VALUES(#{friendId});
    	INSERT INTO friends_${friendId}(friendId) VALUSE(#{id});
    </insert>
    
    <delete id="deleteFriend" parameterType="java.lang.String">
    	DELETE FROM friends_${id}
    	WHERE friendId=#{friendId};
    	DELETE FROM friends_${friendId}
    	WHERE friendId=#{id};
    </delete>
    
    <select id="getNotificationTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Notification">
    	SELECT * FROM notification_${id};
    </select>
    
    <select id="getFriendTable" parameterType="java.lang.String" resultType="java.lang.String" >
    	SELECT friendId FROM friends_${id};
    </select>
</mapper>