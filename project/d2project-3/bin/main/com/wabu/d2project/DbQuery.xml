<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wabu.d2project.user.UserMapper">

    <update id="createTable" parameterType="java.lang.String">
    	CREATE TABLE IF NOT EXISTS ${tableName}(
    		${columns}
    	);
    </update>
       
    <insert id="insertIntoTable" parameterType="java.lang.String">
    	INSERT INTO ${tableName}(${columns}) VALUES(${values});
    </insert>
    
    <update id="updateRecord" parameterType="java.lang.String">
    	UPDATE ${tableName} SET
    		${set}
    	WHERE ${suffix};
    </update>
    
    <select id="getUserTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.User">
    	SELECT ${columns} FROM ${suffix};
    </select>
    
    <select id="getNotificationTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Notification">
    	SELECT ${columns} FROM ${suffix};
    </select>
    
    <select id="getFriendTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Friend">
    	SELECT ${columns} FROM ${suffix}; 
    </select>
    
    <select id="getTableTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Tables">
    	SELECT ${columns} FROM ${suffix}; 
    </select>
    
    <select id="selectFromTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.DataContainer">
    	SELECT ${columnName} FROM ${suffix}
    </select>
    <select id="isExist" parameterType="java.lang.String" resultType="java.lang.String">
    	SELECT 1
    	FROM Information_schema.tables
    	WHERE table_schema = #{dbName}
    	AND table_name = #{tableName}
    </select>
    
    <update id="dropTable" parameterType="java.lang.String">
    	DROP TABLE IF EXISTS ${tableName};
    </update>
    
    <delete id="deleteRecord" parameterType = "java.lang.String">
    	DELETE FROM ${tableName}
    	WHERE ${suffix};
    </delete>
  
</mapper>