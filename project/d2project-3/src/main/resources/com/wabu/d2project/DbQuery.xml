<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wabu.d2project.user.UserMapper">

    <update id="createTable" parameterType="java.lang.String">
    	CREATE TABLE IF NOT EXISTS ${tableName}(
    		${columns}
    	);
    </update>
       
    <insert id="insertIntoTable" parameterType="java.lang.String">
    	INSERT INTO ${tableName}(${columns}) VALUES(${values});
    </insert>
    
    <update id="readNotification" parameterType="java.lang.String">
    	UPDATE notification_${id} SET
    		isRead = true
    	WHERE notificationId=#{notificationId};
    </update>
    
    <select id="getUserTable" resultType="com.wabu.d2project.user.User">
    	SELECT ${columns} FROM user;
    </select>
    
    <select id="getProfileTable" resultType="com.wabu.d2project.user.Profile">
    	SELECT ${columns} FROM profile;
    </select>
    
    <select id="getNotificationTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Notification">
    	SELECT ${columns} FROM notification_${id};
    </select>
    
    <select id="getFriendTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.Friend">
    	SELECT ${columns} FROM friends_${id}; 
    </select>
    
    <select id="selectFromTable" parameterType="java.lang.String" resultType="com.wabu.d2project.user.DataContainer">
    	SELECT ${columnName} FROM ${tableName}
    </select>
    
    <select id="selectFromTableWhere" parameterType="java.lang.String" resultType="com.wabu.d2project.user.DataContainer">
    	SELECT ${columnName} FROM ${tableName}
    	WHERE ${columnName} = #{value};
    </select>
    
    <update id="dropTable" parameterType="java.lang.String">
    	DROP TABLE IF EXISTS ${tableName};
    </update>
    
    <delete id="deleteRecord" parameterType = "java.lang.String">
    	DELETE FROM ${tableName}
    	WHERE ${keyColumn}=#{value};
    </delete>
</mapper>